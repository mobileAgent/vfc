function play(url,title,position)
{
  $('.bio').hide()
  $('#jp_container_1').css('margin-left','20%').css('float','none')
  $('.jp-title').html(title)
  if (typeof position !== 'undefined') {
    $('#jpid').jPlayer('setMedia',{ mp3: url}).jPlayer('play', position);
  } else {
    $('#jpid').jPlayer('setMedia',{ mp3: url}).jPlayer('play');
  }
}

function video_play(url,title)
{
  $('.jp-title').html(title)
  $('#jquery_jplayer_1').jPlayer('setMedia',{ m4v: url}).jPlayer('play')
}

function audio_player_start()
{
    $("#jpid").jPlayer({
        swfPath: "/assets",
        solution: "html,flash"
    });
}

function video_player_start()
{
    $("#jquery_jplayer_1").jPlayer({
        swfPath: "/assets",
        supplied: "m4v",
        solution: "html,flash",
        cssSelectorAncestor: "#jpid"
    });
    $("#jpid")
    .css('width','60%')
    .css('margin-left','20%')
    .css('float','none')
    $("#jquery_jplayer_1").css('margin-left','15%');
}

function document_setup()
{
  $("#q").autocomplete({
    source: '/welcome/search',
    minLength: 2,
    autoFocus: true,
    select: function(event,ui) {
       $("#q").val(ui.item.value);
       $("#sform").submit();
       }        
  });
  $(function() {
     $('.bio').expander({
       slicePoint: 500,
       expandEffect: 'fadeIn',
       expandText: '<%= I18n.t("languages.index.more_html") %>',
       userCollapseText: '[^]'});
     $("#q").select();
     if (document.location.href.indexOf("/videos/") > -1)
       video_player_start();
     else
       audio_player_start();
  });
};

function popout_jplayer()
{
   var title =  $('.jp-title').text();
   var media = $('#jp_audio_0').attr('src');
   var time_str = $('div.jp-current-time').text();
   var time_sec = parseInt(time_str.substr(0,time_str.indexOf(':')) * 60) + parseInt(time_str.substr(time_str.indexOf(':')+1));
   var player_window = window.open('/welcome/player', title + ' Player', 'height=175,width=435,location=no,titlebar=no,status=no,menubar=no');
   if (player_window.focus) 
   {
      player_window.focus();
      player_window.onload = function() {
         player_window.document.title = "VFC - " + title;
         player_window.play(media,title,time_sec)
     };
   }
   $('#jpid').jPlayer("clearMedia");
   $('#jp_container_1').css('margin-left','-9999px').css('float','left');
   return false;
}

$(document).ready(document_setup)
$(document).on("page:load",document_setup)

$(document).on('page:fetch', function() {
  $('#content').fadeOut('slow')
});
$(document).on('page:restore', function() {
  $('#content').fadeIn('slow');
});
