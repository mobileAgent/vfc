<% form_tag :url => {:action => :show}, :remote => true, :update => "msgtable" do %>
  Search: <input type='text' name='q' id='q' size='100'/>
<% end %>
<br />
<% if @items && @items.size > 0 %>
<%= will_paginate @items, :id => true, :class => 'apple_pagination' %>
<table id="msgtable" class="sortable msglist">
  <thead>
    <tr>
      <th id="play_col"></th>
      <th id="speaker_col"><%=sort_link_to "speaker_name", "Speaker" %></th>
      <th id="title_col"><%=sort_link_to "full_title", "Title and Tags" %></th>
      <th id="size_col">Size</th>
      <th id="duration_col">Duration</th>
      <th id="date_col"><%=sort_link_to "event_date", "Date" %></th>
      <th id="place_col"><%=sort_link_to "place" %></th>
      <th id="lang_col"><%=sort_link_to "language", "Lang" %></th>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <%= render :partial => 'audio_item', :locals => {:item => item } %>
    <% end %>
  </tbody>
</table>
<%= will_paginate @items, :id => true, :class => 'apple_pagination' %>

<script>
