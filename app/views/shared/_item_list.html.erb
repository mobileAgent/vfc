<% if @items && @items.size > 0 %>
<%= (page_entries_info @items, :entry_name => "messages").html_safe %> matching '<%= @query_title %>'
<% if (@speaker && (@place || @date || @language)) %>
  <br />
  All messages by <%= link_to(@speaker.full_name,speaker_path(@speaker)) %>,
  <% if @place %>
     All messages from <%= link_to(@place.name,place_path(@place)) %>
  <% elsif @date %>
     All speakers from <%= link_to(@date,"/dates/year/#{@date}") %>
  <% elsif @language %>
     All messages in <%= link_to(@language.name,language_path(@language)) %>
  <% end %>
<% end %>  
<%= will_paginate @items, :id => true, :class => 'apple_pagination' %>
<table id="msgtable" class="sortable msglist">
  <%= render '/audio_messages/audio_table_head' %>
  <tbody>
    <% @items.each do |item| %>
      <%= render :partial => '/audio_messages/audio_item', :locals => {:item => item} %>
    <% end %>
  </tbody>
</table>
<%= will_paginate @items, :id => true, :class => 'apple_pagination' %>
<br />
<% end %>
