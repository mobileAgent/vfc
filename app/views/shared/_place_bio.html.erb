<% if @place && @place.bio -%>
   <div id='place-bio-<%=@place.id%>' class='bio'>
     <div class='bio-text'>
      <% if @place.picture_file %>
        <%= image_tag "#{PHOTOS_URL}/#{@place.picture_file}" %>
      <% end %>
      <%= @place.bio_html.html_safe %>
     </div>
     <div id='other-place-stuff'>
     <div class="fb-like" data-href="<%= request.protocol +
          request.host_with_port %>/place/<%=@place.id%>"
          data-layout="button_count" data-action="like" data-show-faces="false"
          data-share="false"></div>
     </div>
     </div>
   </div>
<% end -%>
