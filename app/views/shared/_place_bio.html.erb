<% if @place && @place.bio -%>
   <div id='place-bio-<%=@place.id%>' class='bio'>
     <div class='bio-text'>
       <% if @place.picture_file %>
         <%= image_tag "#{PHOTOS_URL}/#{@place.picture_file}" %>
       <% end %>
       <%= @place.bio_html.html_safe %>
     </div>
     <div id='other-place-stuff'>
       <div class="fb-like" data-layout="button_count"
            data-action="like" data-show-faces="false"
            data-share="true">
       </div>
     </div>
   </div>
<% end -%>
