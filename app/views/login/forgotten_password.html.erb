<% title("Forgotten Password") %>
  <fieldset>
     <legend>Reset Password</legend>

     <%= form_tag :action => 'reset_password' do %>

        <p><em>Enter the email address you used to register with us.</em></p>
        <p>
          <label for="email" class="col1">Email Address:</label>
          <%= text_field_tag :email, params[:email], :size => 50 %>
        </p>

        <p>
          <%= submit_tag "Send me a new password", :class => "Submit" %>
        </p>

   <% end %>
 </fieldset>
