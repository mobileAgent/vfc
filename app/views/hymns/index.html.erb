               <span class='player' onclick="play('<%= url_for(:controller => :hymns, :action => :show, :id => h.id)%>','<%=j h.title%>')">
                  <%= image_tag 'pixel.gif', :title => 'Play' %>
                </span>
                <%= h.title %>
             </li>
          <% end %>
	</ul>
