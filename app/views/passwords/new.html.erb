<h2><%= t(".title") %></h2>

<p>
  <%= t(".form_instructions") %>
</p>

<% semantic_form_for :password, :url => passwords_path do |form| -%>
  <% form.inputs do -%>
    <%= form.input :email, :label => t(".email_label") %>
  <% end -%>
  <% form.buttons do -%>
    <%= form.commit_button t(".submit_label") %>
  <% end -%>
<% end -%>

