<p>Search for messages or speakers:</p>
<% form_tag('/welcome/search', {:method => :get}) do |f| %>
  <input type='text' name='q' id='q' size='80'/>
<% end %>
<br />
<% if @items && @items.size > 0 %>
<%= page_entries_info @items, :entry_name => "messages" %> matching '<%= @query_title %>'
<table id="msgtable" class="sortable msglist">
  <%= render '/audio_messages/audio_table_head' %>
  <tbody>
    <% @items.each do |item| %>
      <%= render :partial => '/audio_messages/audio_item', :locals => {:item => item} %>
    <% end %>
  </tbody>
</table>
<%= will_paginate @items, :id => true, :class => 'apple_pagination' %>
<% end %>

